//副標字體
$ff1:"NSimSun \65B0\5B8B\4F53", "華康粗明", "DFMingBold-B5 DFTT-M7", "文鼎粗明", "Arphic Mingti Bold BIG5", serif;
// 標題字體
$ff2:"NSimSun \65B0\5B8B\4F53", "華康新特明", "DFMingBold-B5 DFTT-M7", "文鼎特明", "Arphic Mingti Heavy BIG5", "STSong \534E\6587\5B8B\4F53", serif;
// 內文字體
$ff3:"微軟正黑體","Adobe 黑体 Std R", "Adobe 繁黑體 Std B",  Arial, sans-serif;

//顏色設定
$fc1:#5d5e5e;
$fc2:#3D3D3D;
$fc3:#555859;
$fc4:#f1894a;

//字體設定
$fs1: 1em;


// 寬度設定
$w: 100%;
$960: 960px;


// 頁型設定
@mixin layout($lr: 0){
	margin: 0 $lr;
	padding: 0;
	width: $960;
	font-family: $ff3;
}

//文章標題
@mixin title{
	background: url("/play/line.png") no-repeat; 
	position: absolute;
	left: 24px;
	top: 0px;
	z-index: 2;
	height: 23px;
	width: $w;
	color: #FFF;
	font-size: 1.2em;
	font-family: $ff1;	
	padding-left: 40px;	
	span {
		font-family: $ff3;
	}
}

//文章外圍
@mixin article($overflow: scroll){
	background: url("/play/content_bg.png") repeat-y;		
	position: relative;
	width: 920px;
	left: 20px;
	top: 18px;
	z-index: 1;
	overflow-y: scroll; 
	padding: 40px 40px 20px;
	color: #555859;	
	font-family: $ff3;
	overflow-y: $overflow;
}

//文章內部
@mixin section($border: 1px){
	border-bottom-width: $border;
	border-bottom-style: solid;  
	border-bottom-color: #bab197;
	padding-bottom: 50px;
	margin-bottom: 30px;
}

//文章圖片
@mixin newsimg{
	float: right;
	width: 311px;
	height: 197px;
	margin-left: 20px;
}

//文章段落
@mixin p($margin:5px, $fontsize:14px, $lineheight:22px, $color: $fc3){
	margin-top: $margin;
	font-size: $fontsize;
	line-height: $lineheight;
	color: $color;
}

//清除+浮動
@mixin clear($clear: both){
	clear: $clear;
}
@mixin float($float: left){
	float: $float;
}

//粗體
@mixin fwY{
  font-weight: bold;
}

// 文字底線
@mixin tdY{
  text-decoration: underline;
}
@mixin tdN{
  text-decoration: none;
}

// 紅色字
@mixin warn($weight: normal){
  font-weight: $weight;
  color: #ff0000;
  font-size: inherit;
}

//捲軸設定
@mixin scrollbar{	
	scrollbar-face-color: #9e9d9d; 
	scrollbar-highlight-color: #adaca6; 
	scrollbar-shadow-color: #908f8f; 
	scrollbar-3dlight-color: #a6a5a5; 
	scrollbar-arrow-color: #5d5d5c; 
	scrollbar-track-color: #9e9d9d; 
	scrollbar-darkshadow-color: #a1a0a0;
}

h4{
	line-height: 24px;
	@include fwY;
}
