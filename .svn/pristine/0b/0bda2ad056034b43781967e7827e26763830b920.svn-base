.contactForm {
  width: 330px;  
  height: 365px;
  padding: 0px;
  position: fixed;
  bottom: -330px;
  right: 20px;
  z-index: 2;
  -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); 
  transition: all .25s ease-out;  
  border-radius: 7px 7px 0px 0px;
}
.con-header {
  background: #000;
  color: #fff;
  margin: 0;
  padding: 0;
  border-radius: 7px 7px 0px 0px;  
}
h5{
  display: inline-block;
  padding: 8px 0;
  margin: 0;
  text-indent: 1em;
  color: #fff;
  line-height: 1.4em;
}
span {
  float: right;
  margin-right: 10px;
  margin-top: 3px;
  font-size: 1.5em;
  cursor: pointer;
}
span.up, span.down {
  display: inline-block;
  margin-right: 14px;
  margin-top: 7px;
  font-weight: bold;
  font-size: 1.2em;      
}
.bu_s {
  text-align: center;
  padding: 10px 0px;
  margin: 0 0.5em;
  margin-right: 2em; 
  float: right;
}
.bu_s:hover, .bu_s:focus {
  background: transparent;
}
i {
  color: #fff;
  font-size: 1.5em;
}
i:hover, i:focus {
  color: #eee;
  background: transparent;
}
.con-content {
  background: #fff;
}
form{
  width: 90%;
  margin:0 auto;
  padding: 1em;
  text-align: center;
  font-size: 1.5em;
  color: #333;
}
.form-control {
  width: 100%;
  vertical-align: middle;
  border: none ;    
  background: #eee ;
  height: 3em;
  border-radius: 0px;
}
textarea {
  width: 100%;
  vertical-align: middle;
  border: none;    
  background: #eee;
  border-radius: 0px;
}
a.btn-send {
  width: 40%;
  display: block;
  margin: 0 auto;
  padding: 5px;
  text-align: center;
  background: #2A6496;
  border-radius: 5px;
}  
a.btn-send:hover {
  background: #888;           
}

/* mobile */
/* .mobile .contactForm {
  width: 500px !important;
}  */
.mobile span {
  margin-right: 20px;
  margin-top: 2px;
  font-size: 3.6em;
}
.mobile h5,
.mobile span.up, 
.mobile span.down,
.mobile i,
.mobile form {
  font-size: 3em;
}
.mobile form {
  width: 100%;
}
.mobile span.up, 
.mobile span.down {
  margin-top: 9px;     
}
.mobile .form-control {  
  font-size: 0.7em;
}
.mobile a.btn-send {
  margin: 2em auto;
  padding: 1em;
}