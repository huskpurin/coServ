.content {
	margin-top: 3em;
	margin-bottom: 3em;
	text-align: center;
}
h1 {
	margin: 2em auto;
	text-align: center;	
	height: 22px;
	border-bottom: 1px solid #888;	
}
span {
	font-size: 1em;	
	font-weight: bolder;
	padding: 0 20px;
	color: #2A6496;	
	background: #fff;	
}
.setHeight {
	height: 290px;
	text-align: center;
}
i {
	display: block;
	margin: auto;
	padding-top: 18px;
	font-size: 6.5em;
	color: #333;
}
.subtitle {	
	font-size: 1.8em;
	font-weight: 600;
	color: #2A6496;
	line-height: 2em;
	margin-right:-15px;
	margin-left: -15px;
	padding-top: 10px;	
}
p {
	font-size: 1.2em;	
	line-height: 1.8em;
	margin: 0 auto 3em;
	padding:5px;
	color: #000;
}


/* mobile */
.mobile h1 {
	margin: 2em auto !important;
	height: 42px !important;	
}
.mobile span {
	font-size: 2em !important;
}
.mobile .setHeight {
	margin-top: 2em !important;
	height: 450px !important;
}
.mobile i {
	margin-top: 0px !important;
	font-size: 13em !important;
}
.mobile .subtitle {
	font-size: 4em !important;
	line-height: 2em !important;
}
.mobile p {
	font-size: 3em !important;
	line-height: 1.4em  !important;
}



