//副標字體
$ff1:"NSimSun \65B0\5B8B\4F53", "華康粗明", "DFMingBold-B5 DFTT-M7", "文鼎粗明", "Arphic Mingti Bold BIG5", serif;
// 標題字體
$ff2:"NSimSun \65B0\5B8B\4F53", "華康新特明", "DFMingBold-B5 DFTT-M7", "文鼎特明", "Arphic Mingti Heavy BIG5", "STSong \534E\6587\5B8B\4F53", serif;
// 內文字體
$ff3:"微軟正黑體","Adobe 黑体 Std R", "Adobe 繁黑體 Std B",  Arial, sans-serif;

//顏色設定
$fc1:#5d5e5e;
$fc2:#3D3D3D;
$fc3:#555859;
$fc4:#f1894a;

//字體設定
$fs1: 1em;


//寬度設定
$w: 100%;
$960: 960px;

//表格欄位寬度設定
.wc30 {	width: $w * 0.3;}
.wc60 {	width: $w * 0.6;}
.wc10 {	width: $w * 0.1;}

//表格設定
@mixin td {
	border-bottom: none;
	border-right: 1px #ddd solid;
	border-top: none;
	border-left: none;
	vertical-align: middle;	
}

// 頁型設定
@mixin layout($lr: 0){
	margin: 0 $lr;
	padding: 0;
	width: $960;
	font-family: $ff3;
}

//文章標題
@mixin title{
	background: url("/play/line.png") no-repeat; 
	position: absolute;
	left: 20px;
	top: -4px;
	z-index: 2;
	height: 23px;
	width: $w;
	color: #FFF;
	font-size: 1.2em;
	font-family: $ff1;	
	padding-left: 40px;	
	span {
		font-family: $ff3;
	}
}

//文章外圍_newstyle
@mixin article1($height: $w){
	padding: 20px 0px 20px 40px;
	color: #555859;	
	font-family: $ff3;		
	height: $height;	
	width: 860px;
}

//文章外圍_oldstyle
@mixin article($height: 700px, $width: 920px){
	background: url("/play/content_bg.png") -10px -5px repeat-y;	
	-moz-box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.2);
    -webkit-box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.2);
    -ms-box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.2);
    -o-box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.2);
    box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.2);	
	position: relative;
	width: $width;
	left: 20px;
	top: 18px;
	z-index: 1;	 
	padding: 40px 40px 20px;
	color: #555859;	
	font-family: $ff3;
	height: $height;
	overflow-y: hidden;
}

//文章內部
@mixin section($border: 1px){
	border-bottom-width: $border;
	border-bottom-style: solid;  
	border-bottom-color: #D6D1C0;
	padding-bottom: 50px;
	margin-bottom: 30px;
}

//文章圖片
@mixin newsimg{
	float: right;
	width: 311px;
	height: 197px;
	margin-left: 20px;
}

//文章段落
@mixin p($margin:5px, $fontsize:14px, $lineheight:22px, $color: $fc3){
	margin-top: $margin;
	font-size: $fontsize;
	line-height: $lineheight;
	color: $color;
}

//浮動+清除
@mixin float($float: left){
	float: $float;
}
@mixin clear($clear: both){
	clear: $clear;
}


//粗體
@mixin fwY{
  font-weight: bold;
}

// 文字底線
@mixin tdY{
  text-decoration: underline;
}
@mixin tdN{
  text-decoration: none;
}

// 紅色字
@mixin warn($weight: normal){
  font-weight: $weight;
  color: #ff0000;
  font-size: inherit;
}

//捲軸設定
@mixin scrollbar{
	//IE		
	scrollbar-face-color: linear-gradient(to bottom, #5c5b5b 0%, #858484 100%);
	scrollbar-highlight-color:#adaca6;
	scrollbar-darkshadow-color: #929292;
	scrollbar-arrow-color:#5e5d5d;
	scrollbar-shadow-color: #505050;
	scrollbar-3dlight-color: #eeeeee;	
	scrollbar-track-color:#9e9d9d;
	
	//webkit	
	::-webkit-scrollbar {
    	width: 16px;
	}
	::-webkit-scrollbar-track {
		background-color: #9e9d9d;
	} 
	::-webkit-scrollbar-thumb {
	    background-color: -webkit-gradient(linear, 0% 0%, 1000% 1000%, from(#5c5b5b), to(#858484));	   
	}
	::-webkit-scrollbar-button {
	    background-color: #5e5e5d;
	}
	::-webkit-scrollbar-corner {
	    background-color: #9e9d9d;
	}
}

//文字對齊
@mixin textC($align: center){
	text-align: $align;
}

//文字縮排
@mixin indent($indent: 130px) {
	text-indent: $indent;
	display: block;
}

//小標
h4{
	line-height: 24px;
	@include fwY;
}

//無底線
@mixin nobor {
	border-bottom: none;
}

