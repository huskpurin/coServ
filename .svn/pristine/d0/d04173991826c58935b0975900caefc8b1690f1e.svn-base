@import "wonderful.scss";


.table {	
	width: $w * 0.95;
	margin: 0 auto;
	border-collapse: separate;
	border-spacing: 0 20px;
	thead {
		tr {
			th {
			background: #c8c0b3;
			@include textC;
			padding: 5px;
			}
		}
	}
	tbody {
		tr{
			border-bottom: 1px solid #ddd;
			/*display: inline-table;*/
			display: run-in;
			td {
				@include td;
			}
			td:first-child {
				@include textC;
			}
			td:last-child {
				border-right: none;
				@include textC;
			}
		}
		tr:nth-child(5),
		tr:nth-child(10) {
			background: #eaded0;
		}
		td {
			@include td;
			// background: #FFF;
		}
		td:last-child {
			border-right: none;
		}
	}
}

.clear {
	@include clear;
}
.fcO {
	color: #f1894a;
}
.fcG {
	color: #ccc;
}
.borderB {
	border-bottom: 1px #ccc solid;
}
.boline {
  background-color: transparent;
  border: none !important;
  border-bottom: 1px solid #cccccc;
  -webkit-box-shadow: none;
  box-shadow: 0;
}
.maT {
	margin-top: 50px;
}
.pa{
	padding-left: 0;
	padding-right: 0;
}
.control-label {
	vertical-align: middle;
}
.form-control {
	vertical-align: middle;
}
.arrow {
	float: right;
	cursor: pointer;
	margin-top: -15px;
}