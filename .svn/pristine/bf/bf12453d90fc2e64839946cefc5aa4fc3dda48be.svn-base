.wrapper {
  margin-top: 59px;
}
#indexCarousel {
  margin: 0;
}
.carousel-inner {  
  height: 400px;
  vertical-align: middle !important;
  margin: 0 auto;
  background: #dedede; /* Old browsers */
  background: -moz-linear-gradient(top, #dedede 0%, #ffffff 50%, #ffffff 55%, #dadada 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#dedede), color-stop(50%,#ffffff), color-stop(55%,#ffffff), color-stop(100%,#dadada)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #dedede 0%,#ffffff 50%,#ffffff 55%,#dadada 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #dedede 0%,#ffffff 50%,#ffffff 55%,#dadada 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #dedede 0%,#ffffff 50%,#ffffff 55%,#dadada 100%); /* IE10+ */
  background: linear-gradient(to bottom, #dedede 0%,#ffffff 50%,#ffffff 55%,#dadada 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#dedede', endColorstr='#dedede',GradientType=0 ); /* IE6-9 */
}
.carousel-inner .item {
  height: 100% !important;
  vertical-align: middle;
  text-align: center;
  margin: 0;
}
.carousel-inner .item img{  
  display: block; 
  margin: 4em auto 0!important; 
}
/*內文*/
.carousel-caption {
  position: absolute;  
  left: 0;
  bottom: 0;
  z-index: 10;
  margin-bottom: 3em;
  width: 100%;
  padding-top: 20px;
  padding-bottom: 20px;
  color: #000;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, .6);
}
