var  menuShow = false;

ctrl.startup = function() {	
	hover();

	if (ctrl.detectmob()) {		
		ctrl.sel("#header").css('height','100px');
		ctrl.sel("#menu").addClass('menuChang');		
		ctrl.sel(".icon-bar").css('width','70px');
		ctrl.sel(".navbar-header").css('float','right');
		ctrl.sel(".navbar-toggle").css('margin-top','40px');
		ctrl.sel(".navbar-nav").find('li').addClass('buChang');		
		ctrl.sel(".dropdown-toggle").addClass('duChang');
		ctrl.sel(".dropdown-menu").addClass('muChang');
		ctrl.sel(".dropdown-menu li a").addClass('aChang');
		ctrl.sel('.arrow').addClass('arrowChang');
		ctrl.sel('.active').addClass('activeChang');
		ctrl.sel(".navbar-right").addClass('navbarRight');
		ctrl.sel("button.mobMenu").show();
		ctrl.sel("#menu").hide();
		$('.CoservBanner .wrapper').css('margin-top','100px')
		
	}
	else {
		ctrl.sel("#header").css('height','52px');
		ctrl.sel("#menu").removeClass('menuChang');
		ctrl.sel(".navbar-nav").find('li').removeClass('buChang');
		ctrl.sel(".dropdown-toggle").removeClass('duChang');
		ctrl.sel(".dropdown-menu").removeClass('muChang');
		ctrl.sel(".dropdown-menu li a").removeClass('aChang');
		ctrl.sel('.arrow').removeClass('arrowChang');
		ctrl.sel('.active').removeClass('activeChang');
		ctrl.sel(".navbar-right").css('float','left');
		ctrl.sel("button.mobMenu").hide();
		ctrl.sel("#menu").show();
	}
