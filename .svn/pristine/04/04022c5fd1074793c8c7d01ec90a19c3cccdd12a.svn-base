@import "wonderful.scss";

.newspager {	
	position: relative;	
	.title{	
		background: url("/play/line.png") no-repeat; 
		position: absolute;
		left: 24px;
		top: 0px;
		z-index: 2;
		height: 23px;
		width: $w;
		color: #FFF;
		font-size: 1.2em;
		font-family: $ff1;	
		padding-left: 20px;	
		span {
			font-family: $ff3;
		}
	}
	article {
		background: url("/play/content_bg.png") no-repeat;		
		position: relative;
		width: 920px;
		left: 20px;
		top: 18px;
		z-index: 1;
		overflow-y: scroll; 
		padding: 40px;
		color: #555859;	
		font-family: $ff3;		
		section{
			border-bottom: 1px solid #bab197;
			padding-bottom: 50px;
			margin-bottom: 30px;
			img {
				float: right;
				width: 311px;
				height: 197px;
				margin-left: 20px;
			}
			p {
				margin-top: 5px;
				font-size: 14px;
				line-height: 22px;			
			}
			.more {	
				margin-top: 10px;				
				float: right;
				a {
				color: #555859;	
					&:hover {
						text-decoration: none;
					}
				}
			}

		}		
	}
}
.clear {
	clear: left;
}
.hover {
	background: url("/play/more.png") no-repeat;
}