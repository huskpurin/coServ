a:link, a:active {
  text-decoration: none;
}
.article{
  /*width: 770px;*/ 
  padding: 40px;
  color: #4a4a4a;
  font-size: 1.2em;
  font-family: "微軟正黑體","Adobe 黑体 Std R", "Adobe 繁黑體 Std B",  Arial, sans-serif; 
}
.title {
  color: #2EA0D1;  
  font-size: 0.8em;
  line-height: 2.2em;  
  border-bottom: 1px solid #2EA0D1;
  padding-bottom: 1em;
}
/*版頭標題*/
.title h1 {
  font-weight: 900;  
  padding-left: 1em;
  padding-right: 1em;
}
/*版頭標語*/
.title h3{
   padding-left: 1.5em;
   padding-right: 1.5em;
}
/*時間作者*/
.sub{
  margin: 1em 2em 2em;
  padding-left: 1em;
  padding-bottom: 1em;
  text-align: right;
}
.strTime, 
.dspName {
  font-size: 1em;
  color: #2EA0D1;
  line-height: 2em;
}
/*內文*/
.section {
  margin-top: 1em;
  padding-top: 3px;
}
.section  p{  
  font-size: 1.5em;
  line-height: 1.5em;
  color: #666;
  margin-top: 15px;
  margin-bottom: 15px;
  word-wrap: break-word;
}
/*內文標題*/
.subtitle{
  font-weight: 900;
  font-size: 1.6em;
  line-height: 2.8em;
  text-indent: 0.5em;  
  color: #666;
  margin-top:1.2em;
}
.subtitle h3{
  color: #666;
}
p + .subtitle,
pre + p,
pre + p.subtitle,
.subtitle + p.subtopic {
  margin-top: 2em;
}
/*內文程式碼*/
pre code{
  font-size: 16px;
  border-radius: 2px;
  padding: 5px 5px 0;
}

.more {
  display: inline-block;
  margin: 0.5em 0 0.25em; 
  font-size: 1.4em;
  line-height: 1.8em;
  color: #2EA0D1;  
}
.row_down{
  width: 610px;
  padding: 10px 40px 0;
  margin: 50px 0 0;
  border-top: 1px solid #2EA0D1;
  clear: both;
}
.column{
  margin-top: 10px;
}
.column a {
  font-size: 0.9em;
  font-weight: bold;
  color: #2EA0D1;
}
.column a:hover {
  color: #4a4a4a;
}

ul li{
  list-style-type: none;
  color: #2EA0D1;
  line-height: 2em;
}
ul li a{
  color: #2EA0D1;
}
ul li a:hover{
  color: #4a4a4a;
  text-decoration: none;
}

/*分頁按鈕*/
.down{
  width: 95%;
  margin: 40px auto;
}
.pagination {
  font-family: ff-din-web-condensed,Helvetica,sans-serif;
  font-size: 1em;
  text-transform: uppercase;
  color: #fff;
  font-weight: normal;
  text-align: center;
  padding: 0;
  margin: 30px auto 0;
  width: 100%;
  clear: both;
}
.pagination p {
  width: 100%;
  padding: 0;
  margin: 1em auto !important;
  text-align: center;
}
.pagination a,
.pagination span {
  -webkit-border-radius: 2em;
  -moz-border-radius: 2em;
  -ms-border-radius: 2em;
  -o-border-radius: 2em;
  border-radius: 2em;
  border: 4px solid #ddd !important;
  padding: .85em .8em .7em .8em;
  margin: 0 0.5em;  
  color: #fff !important;
}
.pagination a {
  background: #599CCE !important;
}
.pagination span {  
  background: #999;
}
.pagination a:hover
/*.pagination a:link,
.pagination a:active,
.pagination a:visited*/ {
  background: #FFF !important;
  color: #000 !important;
  border-color: #599CCE !important;
}