@import "coserv.scss";
@include link;

.wrapper {
  margin-top: 52px;
  padding: 0px 10px 50px 50px;
  background: #dfdfdf;
  font-family: $ff1;
  //左側內容
  .viewside {
    //margin: 0 0 0 230px;
    -webkit-border-radius: 20px;
    -moz-border-radius: 20px;
    -o-border-radius: 20px;
    -ms-border-radius: 20px;
    border-radius: 20px;
    margin: 0px 230px 0px 50px;
    padding: $fs1*2  $fs1*4;
    min-height: 800px;
    overflow: visible;
    position: relative;
    background: #fff;    
  }

  //右側目錄
  .typeside {
    width: 230px;  
    min-height: 700px;
    @include pa(20px, 20px);
    padding-bottom: 120px;
    margin: 0;
    background: #dfdfdf; 
    position: fixed;
    top: -20px;
    right: 0px; 
    -webkit-transition: margin-left .3s ease;
    -moz-transition: margin-left .3s ease;
    -o-transition: margin-left .3s ease;
    -ms-transition: margin-left .3s ease;
    transition: margin-left .3s ease;
    //收合按鈕
    .side-nav {
      opacity: 1;
      /* -webkit-transition: right .3s;
      -moz-transition: right .3s;
      -ms-transition: right .3s;
      -o-transition: right .3s;
      transition: right .3s; */
      cursor: pointer;
      -webkit-border-radius: 8px 0 0 8px;
      -moz-border-radius: 8px 0 0 8px;
      -o-border-radius: 8px 0 0 8px;
      -ms-border-radius: 8px 0 0 8px;
      border-radius: 8px 0 0 8px;      
      width: 80px;
      height: 80px;      
      padding-top: 20px;
      padding-left: 15px;
      background: #dfdfdf;
      font-size: $fs1 * 3;
      color: #666;
      position: relative;
      top: 180px;
      right: 100px;
      i {
        display: block;
        @include ma;
        &:hover {
          color: #999;
        }
      }
    } 
    .type {
      width: 160px;
      margin: 4em auto 3em;
      text-align: center;
      @include bolder(4px, double, #999);
      span {
        font-size: $fs1 * 2.1;
        color: #4d4d4d;
        line-height: $fs1 * 2;        
      }
    }
    .callout {
      margin: 10px 20px 10px;  
      cursor: pointer;
      @include bolder(1px, solid, #bcbcbc);
      h3 {
        height: 30px;
        // color: #285E9D;
        color: #2781B6;
        line-height: $fs1 * 2;
        font-size: $fs1 * 1.2;
        margin: 0;
        overflow: hidden;
        text-overflow : ellipsis;
        &:hover {
          color: #6D6D6D;
        }
      }
      small {
        display: block;
        color: #aaa;
        text-align: right;
        margin-bottom: 5px;
        &:hover {
          color: #505050;
        }
      }
    }      
    //分頁按鈕
    .row_down {
      width: $w1 - +5%;;
      margin: 40px auto;    
      .pagination {
        @include wrapper {
          font-family: $ff2;
          font-size: $fs1;
          text-transform: uppercase;
          color: #fff;
          font-weight: normal;
          text-align: center;
          clear: both;
          margin: 30px auto 0;
        }        
        a, span {
          -webkit-border-radius: 2em;
          -moz-border-radius: 2em;
          -ms-border-radius: 2em;
          -o-border-radius: 2em;
          border-radius: 2em;
          border: 4px solid #fff;
          padding: .7em .8em .6em .8em;
          margin: 0 0.5em;  
          color: #fff;
        }
        a {
          background: #599CCE;
          &:hover {
            background: #FFF;
            color: #000;
            border-color: #599CCE;
          }
        }
        span {  
          background: #999;
        }
      }
    }
  }  
}

/* -----Setting font-size----- */

@media screen and (max-width: 1100px) {     
  .typeside {
    width: 500px !important;  
  }
  .typeside .type span {
    font-size: $fs1 * 2.8 !important;
    line-height: $fs1 * 2 !important;  
  }
  .typeside .callout a h3{      
    font-size: $fs1 * 2 !important;
    line-height: $fs1 * 2 !important;
    height: 60px !important;
  } 
  .typeside .callout a small {
    font-size: $w1 !important;
  }
}      