@import "coserv.scss";
@include link;
@include wrapper;

.article {  
  color: $fc4;
  font-size: $fs1 * 0.85;
  font-family: $ff1;
  padding: 40px;
  .title {
    color: $fc3;  
    font-size: $fs1 * 1.2;
    line-height: $fs1 * 2; 
    padding-bottom: $fs1;       
    @include bolder(1px, solid, #2EA0D1); 
    span {
      text-indent: 1.5em;
      display: block; 
    }     
    h1 {
      font-weight: 900;  
      @include pa(0.2em, 0.2em);
    }
    h3 {
       @include pa(1em, 1em);
    }
  }
  //時間作者
  .sub {
    margin: 1em 2em 2em;
    @include pa(1em, 1em);
    text-align: right;  
    .strTime, .dspName {
      font-size: $fs1;
      color: $fc3;
      line-height: $fs1 * 2;
    }
    .strTime {
      margin-right: $fs1;
    }
  }
  //內文
  .section {  
    p {  
      font-size: $fs1 * 1.3;
      line-height: $fs1 * 1.5;
      color: #666;
      margin-top: 15px;
      margin-bottom: 15px;
      word-wrap: break-word;    
    }
    h2 {        
      color: $fc3 !important;
    }
    h3.subtitle, h3 {
      font-weight: 600;
      color: $fc3;
      line-height: $fs1 * 2;              
      margin-top: $fs1;  
    }        
    p + h3,   
    p + .subtitle,
    pre + p,
    pre + .subtitle,
    .subtitle + p.subtopic,
    p + h4,
    ul + h4 {
      margin-top: $fs1 * 1.7;
    }
    pre {
      margin: 0px;
      padding: 5px;
      background: #6E6E6E;
    }
    pre code {
      font-size: $fs1 * 1.5;
      color: #fff;
      border-radius: 2px;
    }
    ul li, ol li {
      font-size: $fs1 * 1.3;      
      line-height: 2em;
      color: #666;
      a {
        color: #2EA0D1;
        &:hover {
          color: #3067A5;
          text-decoration: none;
        }
      }
      p {
        font-size: $fs1 * 1.3;
      }           
    }    
    ul.l_roman li {
      list-style-type: lower-roman;
      p {
        font-size: $fs1;
      }
    }  
    ul.disc li {
      list-style-type: disc;
      font-size: $fs1 ;
    }        
  }
}
.gotop {
    display: block;
    float: right;
    margin-right: 0;
    margin: 3em 0 0;
    font-size: $fs1;
    color: #ddd;
    &:hover{
    color: #bbb;
  }
}
    
//分頁按鈕
.down {
  width: $w1 - +5%;
  margin: 40px auto;
  .pagination {
    @include wrapper {
      font-family: $ff2;
      font-size: $fs1;
      text-transform: uppercase;
      color: #fff;
      font-weight: normal;
      text-align: center;
      clear: both;
      margin: 50px auto 0;
    }          
    a, span {
      -webkit-border-radius: 2em;
      -moz-border-radius: 2em;
      -ms-border-radius: 2em;
      -o-border-radius: 2em;
      border-radius: 2em;
      border: 4px solid #ddd;
      padding: .8em 1em .7em 1em;
      margin: 0 1em;  
      color: #fff;
    }
    a {
      background: #599CCE;
      &:hover {
        background: #FFF;
        color: #000;
        border-color: #599CCE;
      }
    }
    span {  
      background: #999;
    }
  }
}

    