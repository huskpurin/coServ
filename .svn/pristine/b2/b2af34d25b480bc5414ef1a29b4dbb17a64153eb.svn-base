.content {
	margin-top: 3em;
	margin-bottom: 3em;
}
.content h1 {		
	margin: 2em auto;
	text-align: center;
	border-bottom: 1px solid #888;
	height: 22px;	
}
.content h1 span{
	font-size: 1em;
	color: #2A6496;
	font-weight: bolder;	
	padding: 0 20px;
	background: #fff;	
}
.content img {
	display: block;
	padding: 0;
	margin: 0 auto;
}
.content h4 {	
	font-size: 2em;
	color: #555;
	margin-top: 1em;
	margin-bottom: 3em;
}
.content h4:hover {
	color: #299DB6;
}
.pa {
	padding-left: 4em;
	padding-right: 4em;
}
