.content {
	margin-top: 3em;
	margin-bottom: 3em;
}
.content h1 {		
	margin: 0 auto 2em;
	text-align: center;
	border-bottom: 1px solid #888;
	height: 22px;		
	/*width: 80%;*/	
	min-width: 620px;	
}
.content h1 span{
	font-size: 1em;
	color: #2A6496;
	font-weight: bolder;	
	padding: 0 20px;
	background: #fff;	
}
.content i {
	/*border-radius: 50%;*/
	/*border: 1px solid #fff;*/
	width: 100px;
	height: 100px;
	text-align: center !important;
	padding-top: 18px;
	font-size: 7em;
	color: #333;	
}
.content h4 {	
	font-size: 2em;
	color: #2A6496;
	font-weight: bold;
	margin-left: -15px;
	margin-right: -15px;
}
.content p {
	font-size: 1.6em;
	color: #000;
	line-height: 1.7em;
	margin: 0 auto 3em;
	padding-right: 5px;
	padding-left: 5px;	
}
.content .setHeight {
	height: 290px;
}
.content a.more {
	display: block;
	padding: 10px 0;
	margin: 1em auto;
	width: 125px;
	font-size: 1.4em;
	font-weight: bold;
	color: #555;
	text-align: center;
	-webkit-border: 2px solid #888;
    -moz-border: 2px solid #888;
    -o-border: 2px solid #888;
    -ms-border: 2px solid #888;
    border: 2px solid #888;
	-webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    -o-border-radius: 5px;
    -ms-border-radius: 5px;
    border-radius: 5px;
}
a.more:hover {
	color: #fff;
	-webkit-border-color: #ccc;
    -moz-border-color: #ccc;
    -o-border-color: #ccc;
    -ms-border-color: #ccc;
    border-color: #ccc;
    background: #888;
}
