body{
	margin: 0;
	padding: 0;
	font-size: 1em;
	line-height: 2em;
	-webkit-font-smoothing: antialiased;
    color: #111;
	font-family: "微軟正黑體","Adobe 黑体 Std R", "Adobe 繁黑體 Std B", Arial, sans-serif;
	overflow-x: hidden;
}
#pgHead, #pgFooter, #pgContainer{
	width: 100%;
	margin: 0;
	padding: 0;
}
a, a:hover {
  text-decoration: none;
}
@media screen and (max-width: 783px) {
  body { 
      overflow-x: auto !important; 
    }
}
