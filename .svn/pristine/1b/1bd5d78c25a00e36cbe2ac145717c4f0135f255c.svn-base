@import "coserv.scss";
@include link;

@mixin iStyle {
	width: 100px;
	height: 100px;
	text-align: center;
	padding-top: 18px;
	font-size: $fs1 * 6;
	color: #333;	
}

.content {
	@include content;
	font-family: $ff1;
	h1 {
		@include h1;
		span {
			@include span;
		}
	}
	.setHeight {
		height: 290px;
		i {
			@include iStyle;
		}
		.sub {	
			@include sub {
				@include ma(-15px, -15px);
				padding-top: 10px;					
			}
		}
		p {
			@include p;
		}
	}
	.more {
		@include more;
	}
}

.heightChang {
	margin-top: 2em !important;
	height: 400px !important;
}
.iChang {
	margin-top: 0px !important;
	font-size: $fs1 * 12 !important;
}
.subChang {
	font-size: 2.8em !important;
	line-height: 1.8em !important;
}
.pChang {
	font-size: 2.2em !important;
	line-height: 1.2em !important;
	margin: 0 -1em 4em !important;
}



