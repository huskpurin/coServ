//自訂捲軸
ctrl.startup = function()  {
  var srvPath = '/bustime/news/view/',
      req = { };
  ctrl.sel('.news').each(function(){
    var news = this;
    req.url = srvPath + $(news).attr('ngID');
    __.api(req, function(data) {
      $(news).html(data.value.body);
    });
  });

  scrollbar();
};
function scrollbar() {
  var $scrollbar = $("#scrollbar1");
      $scrollbar.tinyscrollbar();
};
