@import "wonderful.scss";

#footer{
  margin: 0 auto;
  width: 960px;
  .row{
    // width: $1280;
    margin: 0 auto;
    .sitemap {
      font-family: $ff1;
      margin-left: 40px;
      margin-right: -40px;
      h4 {
        font-color: #000;
        border-bottom: 1px #ccc solid;
        line-height: 40px;
        font-weight: bold;
        margin-right: 45px;
        margin-top: 25px;
        padding-bottom: 10px;
      }
      ul {
        li {
          display: inline-block;
          font-size: 0.8em;    
          margin-right: 30px;
        }
        a {
          display: block;
          color: $fc1;
          text-decoration: none;    
          &:hover {
            text-decoration: none;
            color: $fc2;      
          }
          &.last {
            margin-right: -30px;
          }
        }
      }    
    }
  }
  #sponsors {
    padding-right: 20px;
    .sponsor {
      display: inline-block;
      margin-top: 55px;
      margin-right: 10px;
      font-family: $ff3;
      font-size: 0.7em;
      color: $fc1;
    }
  }
  #recommand {
    width: $w;
    color: #fff;
    background: #393b3d;
    margin-top: 30px;
    font-size: 0.6em;
    font-weight: lighter;
    line-height: 3em;
    text-align: center;
    font-family: $ff3;
    span {
      width: 1280px;
      margin: 0 auto;
    }
  }
}

