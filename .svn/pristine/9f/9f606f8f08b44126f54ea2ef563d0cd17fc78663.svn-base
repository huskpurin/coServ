ctrl.startup = function() {			
    sideNav()
};

function sideNav() {
  $(window).resize(function() {  
      $(".side-nav").css('visibility','hidden');   
      $(".article").css('margin-right','230px');

        if ($(this).width() > 1100){
          $(".typeside").animate({right:0},100);
          $('.typeside').height($(window).height() - 190);          
        } 
        else {
          $(".typeside").animate({right:-500},100);
          $('.typeside').height($(window).height() + 190);
          $(".article").css('margin-right','20px');
          $(".side-nav").css('visibility','visible');
        } 

        //Pagination
        if ($(this).width() > 800){
          $(".down").css('visibility','hidden');          
        }
        else {            
          $(".down").css('visibility','visible');
        }           
  });

  var i = 0;
  $(".side-nav").click(function() { 
    if (i){
          i=0;
          $(".typeside").animate({right:0},100);                    
      } 
      else {           
        i=1;
        $(".typeside").animate({right:-500},100);         
      }          
  });
    
};


