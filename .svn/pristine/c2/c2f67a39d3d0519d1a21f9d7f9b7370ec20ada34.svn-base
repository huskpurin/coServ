@import "wonderful.scss";
@import "scrollbar.scss";

.newspager {	
	position: relative;	
	.title{	
		@include title;
	}
	.article {
		@include article;		
		.section{
			@include section;
			img {
				@include newsimg;
			}
			p {
				@include p;			
			}
			.more {	
				margin-top: 10px;		
				float: right;	
				margin-right: 340px;
				a {
				color: #555859;	
					&:hover {
						text-decoration: none;
					}
				}
			}
		}
	}		
}
.clear {
	@include clear;
}
.hover {
	background: url("/play/more.png") no-repeat;
}