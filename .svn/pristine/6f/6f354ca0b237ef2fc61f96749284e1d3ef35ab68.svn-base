@import "coserv.scss";
@include link;

#header {
  @include wrapper;
  background: rgba(222, 222, 222, 0.95);
  height: 52px; 
  .icon-bar {
    background: #999;
  }
  .github {
    @include github;
  }
  .collapse {
    display: block;
  }
  ul.navbar-nav.navbar-right:last-child {
    margin-right: $fs1 * 2;  
    li.bu {
      @include float; 
      // padding: 0 30px;
      // margin: 0;
      // line-height: 48px;
      padding: 0;
      margin: 20px;
      line-height: 28px;
      text-align: center;
      font-family: $ff1;
      color: $fc1;
      font-size: $fs1 * 1.2;
      display: inline-block;
      position: relative;
      &:active, &:hover, &:focus, &:visited, &.active { 
        @include border-bottom(2px, solid, #599CCE);
        .arrow {
          width: 0px;
          height: 0px;
          border-width: 6px;
          border-style: solid;
          border-color: transparent transparent #599CCE transparent ;
          position: absolute;
          // top: $w1 - +30%;
          top: $w1 - +40%;
          left: $w1 - +60%;
        }
      } 
    }   
    //language
    .dropdown {     
      &:hover a {
        background: transparent;  
      }
      .dropdown-toggle {
        //width: 110px;
        display: block;
        text-align: center;        
        padding: 0;
        margin: 10px;
        line-height: 8px;
        color: $fc1;
        background: transparent;
        border: none;
      }
      .dropdown-menu {
        width: 100px;
        min-width: 100px;
        max-width: 100px;        
        background: #599CCE;
        border: none;
        box-shadow: none;
        text-align: center;
        @include ma(auto, auto);
        @include pa(0px, 0px);
        z-index: 1001;       
        a {
          padding: 5px 15px;
          line-height: 24px;
          font-size: 16px;
          color: #fff;
          &:active, &:hover, &:focus, &:visited, &.active {
            text-decoration: none;
            color: rgba(255, 255, 255, 0.7);
          }
        }
      }
    }
    //dropdown-menu onclick li staus
    .navbar-nav > .open .dropdown {
      background: transparent; 
    }      
    .navbar-nav > .open  > a {
      background: transparent; 
      &:hover, &:focus, &:active, &:visited {
        background: transparent;
      }
    }        
  }   
}

/* Mobile */
.mobile {
  .navbar-header {
    float: right !important;
  }
  .navbar-toggle {
    margin-top: 20px !important;
  }
  .icon-bar {
    width: 70px !important;
    height: 4px !important;
    line-height: 60px !important;
    margin-top: 8px !important;
  }
  .collapse {
    background: rgba(222, 222, 222, 0.95) !important;
    @include ma(auto, auto);  
    width: 100% !important; 
  }
  .navbar-right {
    float: left !important;
    margin-left: 80px !important;
    margin-right: -35px !important;
  }
  li.bu {
    padding: 0px !important;
    margin-left: 40px !important;
    margin-right: 40px !important;
    line-height: 50px !important;
    font-size: 42px !important;   
  }
  .dropdown-toggle {
    padding: 0px !important;
    margin: 0px !important; 
    line-height: 51px !important;
    font-size: 42px !important;       
  }
  .dropdown-menu {  
    width: 250px !important;
    min-width: 250px !important;
    max-height: 250px !important; 
    padding-top: 15px !important;
    padding-bottom: 15px !important;
    left: -30px !important;
  }
  .dropdown-menu li a {
    font-size: 42px !important;
    line-height: 62px !important;
  }
  .active { 
      &:active, &:hover, &:focus, &:visited, &.active {
        border-bottom-width: 3px !important;
      }  
  }
  span.arrow {
       &:active, &:hover, &:focus, &:visited, &.active {
        border-width: 8px !important;    
        top: $w1 - +30% !important;
      } 
  }
}
