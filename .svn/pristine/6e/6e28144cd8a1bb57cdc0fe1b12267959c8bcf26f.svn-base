var isClick = 0;

ctrl.startup = function() {	
	sideNav();
};

function sideNav() {
	
	if (ctrl.detectmob()){        
        //ctrl.sel('.typeside').height($(window).height() + 190);
        //ctrl.sel('.typeside').animate({right:-460},100); 
       	ctrl.sel(".side-nav").addClass('sidenavChange');
       	$(".CoservDoc .viewside").css('width', '0px');
       	ctrl.sel(".typeside").css('width', '0px');
       	ctrl.sel(".on").css('display','none');        
        ctrl.sel('.type').find('span').addClass('typeSpan');
        ctrl.sel('.callout').find('h3').addClass('calloutH3');
        ctrl.sel('.callout').find('small').addClass('small');
	} 
	else {
		//ctrl.sel('.typeside').height($(window).height() - 190);
		//ctrl.sel('.typeside').animate({right:0},100); 
		ctrl.sel(".side-nav").removeClass('sidenavChange');
		$(".CoservDoc .viewside").css('width', '230px');
		ctrl.sel(".typeside").css('width', '230px');
		ctrl.sel(".on").css('display','block');		
		ctrl.sel('.type').find('span').removeClass('typeSpan');
        ctrl.sel('.callout').find('h3').removeClass('calloutH3');
        ctrl.sel('.callout').find('small').removeClass('small');
	} 
	
	//Pagination
	if (ctrl.detectmob()){
		ctrl.sel(".down").css('visibility','visible');
	}
	else {
		ctrl.sel(".down").css('visibility','hidden');
	}
	
	
	ctrl.sel(".side-nav").click(function() { 
		if (isClick){
			isClick=0;
			//ctrl.sel(".typeside").animate({right:-460},100);
			$(".CoservDoc .viewside").css('width', '0px');
			ctrl.sel(".typeside").css('width', '0px');			
			ctrl.sel(".on").css('display','none');
		} 
	    else {           
	    	isClick=1;
	    	//ctrl.sel(".typeside").animate({right:0},100);	    	
	    	$(".CoservDoc .viewside").css('width', '500px');
	    	ctrl.sel(".typeside").css('width', '500px');
	    	ctrl.sel(".on").css('display','block'); 
	    }          
	});    
};

ctrl.detectmob = function () {
	var  isMob = false;
	if( navigator.userAgent.match(/Android/i) || navigator.userAgent.match(/webOS/i)
			|| navigator.userAgent.match(/iPhone/i)	|| navigator.userAgent.match(/iPad/i)
			|| navigator.userAgent.match(/iPod/i) || navigator.userAgent.match(/BlackBerry/i)
			|| navigator.userAgent.match(/Windows Phone/i)
	){
		isMob = true;
	}
	return isMob;
}