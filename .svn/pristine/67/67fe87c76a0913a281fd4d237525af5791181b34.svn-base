@import "coserv.scss";
@include link;

.wrapper {
  margin-top: 52px;
  padding: 50px 10px 50px 20px;
  background: #dfdfdf;
  font-family: $ff1; 
  font-style: normal;
  .article {  
    @include border-radius(20px);
    margin: 0px 230px 0px 50px;   
    margin-right: 230px;
    padding: $fs1*2  $fs1*4 $fs1*8;
    padding-top: $fs1*2;
    padding-right: $fs1*4;
    min-height: 800px; 
    height: auto;     
    position: relative;
    overflow: visible;
    background: #fff;  
    color: $fc4;
    font-size: $fs1 * 0.85;
    font-family: $ff1;
    font-weight: normal !important;
    //標題
    .title {
      color: $fc3;  
      font-size: $fs1 * 1.2;
      line-height: $fs1 * 2; 
      padding-bottom: $fs1;       
      @include border-bottom(1px, solid, #2EA0D1);        
      h1 {
        font-weight: bolder;  
        @include pa(0.2em, 0.2em);
      }
      h3 {
         @include pa(1em, 1em);
      }
    }
    //時間&作者
    .sub {
      margin: 1em 0 2em;
      @include pa(1em, 1em);
      text-align: right;  
      .strTime, .dspName {
        font-size: $fs1;
        color: $fc3;
        line-height: $fs1 * 2;
      }
      .dspName {
        margin-left: $fs1;
      }
    }
    //內文
    .section {  
      p {  
        font-size: $fs1 * 1.5;
        font-weight: normal !important;
        line-height: $fs1 * 1.5;
        color: #666;
        margin-top: 15px;
        margin-bottom: 15px;
        word-wrap: break-word;    
      }
      h2 {        
        color: $fc3 !important;
      }
      h3.subtitle, h3 {
        font-weight: 600;
        color: $fc3;
        line-height: $fs1 * 2;              
        margin-top: $fs1;  
      }
      h4 {
        font-weight: bold;
      }        
      p + h3,   
      p + .subtitle,
      pre + p,
      pre + .subtitle,
      .subtitle + p.subtopic,
      pre + h4,
      p + h4,
      ul + h4 {
        margin-top: $fs1 * 1.7;
      }
      pre {
        margin: 0px;
        padding: 5px;
        background: #7a7a7a;
        width: $w1;
        overflow-x: auto; 
      }      
      pre code {
        font-size: $fs1 * 1.5;
        font-family: $ff1;
        color: #fff;
        word-wrap: break-word;
        @include border-radius(2px);
      }
      code * {        
        font-size: $fs1 * 1.5;
        color: #333;
        background: #DFDFDF;      
      }      
      ul li, ol li {
        font-size: $fs1 * 1.5;
        line-height: $fs1 * 1.5;       
        color: #666;
        a {
          color: #2EA0D1;
          &:hover {
            color: #3067A5;
            text-decoration: none;
          }
        }
        p {
          font-size: $fs1 * 1.5;
          font-weight: normal;
        }           
      }    
      ul.l_roman li {
        list-style-type: lower-roman;
        font-size: $fs1 * 1.5;
        p {
          font-size: $fs1 * 1.5;
          font-weight: normal;
        }
      }  
      ul.disc li {
        list-style-type: disc;
        font-size: $fs1 * 1.5;
        p {
          font-size: $fs1;
          font-weight: normal;
        }
      }     
    }
    .gotop {
      display: none;
      position: fixed;
      bottom: 150px;
      right: 255px;
      font-size: $fs1 * 3;
      color: rgba(200,200,200,0.5);
      &:hover {
        color: rgba(150,150,150,0.5);
      }
    }
  }
  //右側清單
  .viewside {
    width: 230px;  
    min-height: 600px;    
    margin: 0;
    padding: 0;
    position: absolute;
    overflow: visible;
    top: 60px;
    right: 0px;   
    @include transition(margin-left, .3s, ease);           
  }      
  //分頁按鈕
  .down {
    width: $w1 - +5%;
    margin: 40px auto;
    .pagination {
      @include wrapper {
        font-family: $ff2;
        font-size: $fs1;
        text-transform: uppercase;
        color: #fff;
        font-weight: normal;
        text-align: center;
        clear: both;
        margin: 50px auto 0;
      }          
      a, span {
        @include border-radius(2em);
        padding: .8em 1em .7em;
        margin: 0 1em;  
        color: #fff;
      }
      a {
        background: #599CCE;
        &:hover {
          background: #FFF;
          color: #000;
          border-color: #599CCE;
        }
      }
      span {  
        background: #999;
      }
    }
  }
}

/* mobile */
.mobile {
  .article {
    margin-right: 50px !important;
    padding-top: 90px !important;
    padding-right: 40px !important;
    font-weight: normal !important;
  }
  .mobile h1 { 
    font-size: 4.5em !important; 
    line-height: 1.2em !important;
  }
  .mobile h3 {
    font-size: 3.6em !important;
    line-height: 1.2em !important;
  }
  .mobile h4 {
    font-size: 3.4em !important;
  }
  .mobile p {
    font-size: 3em !important;
    line-height: 1.2em !important;
  }
  .mobile ul li {
    font-size: 3em !important;
    line-height: 1.2em !important;
  }
  .mobile pre {
    width: 100% !important;
    overflow-x: auto !important;    
  }
  .mobile pre code {
    font-size: 3em !important;
    word-break: break-all !important;
  }
  .mobile .strTime,.mobile .dspName {
    font-size: 3em !important;  
  }
  .mobile .gotop {
    right: 80px !important;
    bottom: 290px !important;
    font-size: 5em !important;
  }
}