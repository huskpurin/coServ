@import "coserv.scss";
@include link;

.wrapper {
  margin-top: 52px;
  background: #dfdfdf;
  font-family: $ff1;
  //目錄
  .typeside {
    width: 230px;  
    min-height: 810px;
    max-height: auto;
    float: left;
    @include pa(20px, 20px);
    margin: 0;
    background: #dfdfdf; 
    position: absolute;
    left: 0; 
    -webkit-transition: margin-left .3s ease;
    -moz-transition: margin-left .3s ease;
    -o-transition: margin-left .3s ease;
    -ms-transition: margin-left .3s ease;
    transition: margin-left .3s ease;  
    .type {
      width: 160px;
      margin: 4em auto 3em;
      text-align: center;
      @include bolder(4px, double, #999);
      span {
        font-size: $fs1 * 2.1;
        color: #4d4d4d;
        line-height: $fs1 * 2;        
      }
    }
    .callout {
      margin: 10px 20px 10px;  
      cursor: pointer;
      @include bolder(1px, solid, #bcbcbc);
      h3 {
        height: 30px;
        color: $fc3;
        line-height: $fs1 * 2;
        font-size: $fs1 * 1.2;
        margin: 0;
        overflow: hidden;
        text-overflow : ellipsis;
        &:hover {
          color: #6D6D6D;
        }
      }
      a small {
        display: block;
        color: #aaa;
        text-align: right;
        margin-bottom: 5px;
        &:hover {
          color: #6D6D6D;
        }
      }
    }      
    //分頁按鈕
    .row_down {
      width: $w1 - +5%;;
      margin: 40px auto;    
      .pagination {
        @include wrapper {
          font-family: $ff2;
          font-size: $fs1;
          text-transform: uppercase;
          color: #fff;
          font-weight: normal;
          text-align: center;
          clear: both;
          margin: 30px auto 0;
        }        
        a, span {
          -webkit-border-radius: 2em;
          -moz-border-radius: 2em;
          -ms-border-radius: 2em;
          -o-border-radius: 2em;
          border-radius: 2em;
          border: 4px solid #fff;
          padding: .7em .8em .6em .8em;
          margin: 0 0.5em;  
          color: #fff;
        }
        a {
          background: #599CCE;
          &:hover {
            background: #FFF;
            color: #000;
            border-color: #599CCE;
          }
        }
        span {  
          background: #999;
        }
      }
    }
  }
  //右側
  .viewside {
    margin: 0;
    padding: $fs1;
    min-height: 800px;
    overflow: visible;
    position: relative;
    background: #fff;
    margin-left: 230px;
  }
}
