@import "coserv.scss";
@include link;

#header {
  @include wrapper;
  background: rgba(222, 222, 222, 0.95);
  height: 52px; 
  .icon-bar {
    background: #999;
  }
  .github {
    @include github;
  }
  //mobile
  .navbar-collapse.in {
    overflow-y: visible;
  }  
  //#menu
  ul.navbar-nav.navbar-right:last-child {
    margin-right: $fs1 * 2;  
    li.bu {
      @include float; 
      padding: 0 30px;
      margin: 0;
      text-align: center;
      font-family: $ff1;
      color: $fc1;
      font-size: $fs1 * 1.2;
      display: inline-block;                
      line-height: 48px; 
      position: relative;
      &:active, &:hover, &:focus, &:visited, &.active { 
        @include border-bottom(4px, solid, #599CCE);
        .arrow {
          width: 0px;
          height: 0px;
          border-width: 8px;
          border-style: solid;
          border-color: transparent transparent #599CCE transparent ;
          position: absolute;
          top: $w1 - +30%;
          left: $w1 - +58%;
        }
      } 
    }   
    //language
    .dropdown {     
      &:hover a {
        background: transparent;  
      }
      .dropdown-toggle {
        width: 110px;
        display: block;
        text-align: center; 
        margin: 0;
        line-height: 18px;
        color: $fc1;
        background: transparent;
        border: none;
      }
      .dropdown-menu {
        width: 120px;
        min-width: 120px;
        max-width: 120px;        
        background: #599CCE;
        border: none;
        box-shadow: none;
        text-align: center;
        @include ma;
        @include pa(0px, 0px);
        z-index: 1001;       
        a {
          padding: 5px 15px;
          line-height: 24px;
          font-size: 16px;
          color: #fff;
          &:hover, &:focus {
            text-decoration: none;
            color: rgba(255, 255, 255, 0.7);
          }
        }
      }
    }
    //dropdown-menu onclick li staus
    .navbar-nav > .open .dropdown {
      background: transparent; 
    }      
    .navbar-nav > .open  > a {
      background: transparent; 
      &:hover, &:focus, &:active, &:visited {
        background: transparent;
      }
    }        
  }   
}

.buChang {
  padding-top: 20px !important;
  padding-bottom: 20px !important; 
  line-height: 50px !important;
  font-size: 28px !important;   
}
.duChang {
  padding-top: 20px !important;
  padding-bottom: 20px !important; 
  line-height: 10px !important;
  font-size: 28px !important;   
}
.activeChang { 
  &:hover, &.active {
    border-bottom-width: 6px !important;
  }  
}
.arrowChang {
  &:hover , &.active {
    border-width: 12px !important;    
    top: $w1 - +25% !important;
  }
}
.navbarRight {
  float: left !important;
  margin-left: 150px !important;
}
