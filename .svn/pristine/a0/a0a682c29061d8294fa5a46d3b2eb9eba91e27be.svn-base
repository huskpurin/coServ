.content {
	margin-top: 3em;
	margin-bottom: 3em;
	text-align: center;
}
.inner {
	margin: 2em auto;
	padding: 5px 50px 15px;
	background: #599CCE;
	color: #fff;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	-ms-border-radius: 10px;
	-o-border-radius: 10px;
	border-radius: 10px;
}
h1 {
	margin: 1em auto;
	text-align: center;	
	height: 22px;	
}
h1 span {
	font-size: 1em;	
	font-weight: bolder;
	padding: 0 20px;
	color: #fff;
	background: transparent;	
}
p {
	padding: 2px 1em 1em;
	margin: 0;
	font-size: 1.2em;
	line-height: 1.8em;
	text-indent: 2em;
	text-align: left;
}
p + p {
	margin-top: -10px;
}
	
/*** mobile ***/
.mobile h1 {
	margin: 2em auto  !important;
	height: 42px  !important;
}
.mobile span {
	font-size: 1.8em  !important;
}
.mobile p {
	font-size: 2.3em  !important;
	line-height: 1.4em  !important;
	margin: 0 -1em  !important;
}