/* Add css rules here that are valid for the whole page */
@import "wonderful.scss";

html{
	@include scrollbar;
}
#pgContainer {
	@include layout(auto);
	background-color: rgba(255,255,255,0.8);
	background: url("/play/bg.jpg") repeat-y;
	#pgHead {
		height: 75px;
		@include layout;		
	}
	#pgContent {
		min-height: 600px;		
		background-color: rgba(255, 246, 230, 0.5);	
		@include layout;	
	}
	#pgFooter {
		clear: both;		
		height: 138px;
		background: rgb(255, 255, 255);
		@include layout;
	}
}
ul {
	list-style: none;
	padding-left: 0;
}