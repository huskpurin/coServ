ctrl.startup = function() {	
	if (ctrl.detectmob()) {		
		ctrl.sel("h1").addClass('h1Chang');	
		ctrl.sel("h1 span").addClass('spanChang');
		ctrl.sel(".setHeight").addClass('heightChang');
		ctrl.sel(".sub").addClass('subChang');		
		ctrl.sel("p").addClass('pChang');
		ctrl.sel("i").addClass('iChang');		
	}
	else {
	    ctrl.sel("h1").removeClass('h1Chang');
	    ctrl.sel(".setHeight").removeClass('heightChang');		
		ctrl.sel(".sub").removeClass('subChang');		
		ctrl.sel("p").removeClass('pChang');
		ctrl.sel("i").removeClass('iChang');
	}
};

ctrl.detectmob = function () {	
	var  isMob = false;
	if( navigator.userAgent.match(/Android/i) || navigator.userAgent.match(/webOS/i)
			|| navigator.userAgent.match(/iPhone/i)	|| navigator.userAgent.match(/iPad/i)
			|| navigator.userAgent.match(/iPod/i) || navigator.userAgent.match(/BlackBerry/i)
			|| navigator.userAgent.match(/Windows Phone/i)
	){
		isMob = true;
	}
	return isMob; 
};
