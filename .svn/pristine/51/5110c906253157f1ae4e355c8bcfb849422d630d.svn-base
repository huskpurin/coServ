@import "wonderful.scss";


.newspager {	
	@include page;	
	.title{	
		@include title;
	}
	.article {
		@include article1;	
			
		.section{
			@include section;
			img {
				@include newsimg;
			}
			p {
				@include p;			
			}
			.more {	
				margin-top: 10px;		
				float: right;	
				margin-right: 340px;
				a {
				color: #555859;	
					&:hover {
						text-decoration: none;
					}
				}
			}
		}
	}		
}
.clear {
	@include clear;
}
.hover {
	background: url("/play/more.png") no-repeat;
}

.panel-group{
	margin-bottom: 2px;
}
.panel-custom {
	background: transparent;
	border: none;
	.panel-heading.active {
		background: #F1894A;
	}
	.panel-heading {
		background: #f7b689;
		height: 32px;
		padding-top: 5px;
		vertical-align: middle;
	}
}
.caret{
	margin-top: 10px;
}
a, a:hover, a:hover, a:link, a:active, a:visited, a:focus {
	color: white;
	text-decoration: none;
}