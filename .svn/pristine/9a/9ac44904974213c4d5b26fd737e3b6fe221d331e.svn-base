<!-- 新增按鈕列開始 -->
<div class="row plustitle plustitleC">
	<% if (bi.query.geo === 'false') { %>
	<div class="col-md-12 plus" id="addBtn">
		<a href="#" data-toggle="modal" data-target="#editorModal" onclick="<%=ctrl%>.embedEditor('<%=bi.query.rs%>', 'undefined');">
			<i class="icon-plus"></i><span>新增</span>
		</a>
	</div>
	<% } else { %>
	<div class="col-md-12 plus" id="addBtn">
		<div>無法透過此資源新增文章</div>
	</div>
	<% } %>
</div>
<span><i class="fa fa-file-text-o" style="font-size: 20px"></i>　文章</span>
<!-- 新增按鈕列結束 -->
<% 	var  id = bi.uri.split('/').reverse()[0]; %>
<!-- 文章分類-下拉式選單開始 -->
<div class="btn-group" style="visibility: hidden">
	<button id="btnGroupVerticalDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		<span id="article" ca="<%=bi.query.ca%>" appCode="<%=bi.query.appCode%>" rs="<%=bi.query.rs%>" geo="<%=bi.query.geo%>" locale="<%=bi.query._loc%>">
			<% if (bi.query.rs) { %>
				<%=bi.query.rs%>
			<% } else { %>
				請選擇 文章類別
			<% } %>
		</span>
		<span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu" aria-labelledby="btnGroupVerticalDrop1" cate="article">

  </ul>
</div>
<!-- 文章分類-下拉式選單結束 -->

<!-- widget開始 -->
<div class="widget">
	<% if (value && value.list.length > 0)  { %>
	<div class="widget-content">
		<!-- Widget content -->
		<table class="table table-striped table-bordered table-hover allArticle" style="table-layout: fixed;">
			<tr>
				<th class="wc7">  識別碼 </a></th>
				<th class="wc15"> 標題 </th>
				<th class="wc30"> 引文 </th>
				<th class="wc10"> 作者 </th>
				<th class="wc6"><center>附加檔</center></th>
				<th class="wc7"><center>地理位置</center></th>
				<th class="wc15"> 最後修改時間 </th>
				<!-- <th class="wc30">  功能  </th> -->
				<th class="wc10"><center>功能</center></th>
			</tr>
			<% value.list.forEach(function(item) { %>
			<tr class="<% if (item.noCont === true) { %> callout <% } %>">
				<td>  <%= item.ngID %>  </td>
				<td> <%= item.title %> </td>
				<td class="ddd"> <%=item.summary%> </td>
				<td> <%= item.dspName %> </td>
				<td><% if (item.attCount > 0) { %><center><span class="icon-ok"></span></center><% } else { %><center>--</center><% } %></td>
				<td><% if (item.geoCount > 0) { %><center><span class="icon-ok"></span></center><% } else { %><center>--</center><% } %></td>
				<% var t = new Date(item.mdTime) %>
				<td>  <%= ('0'+(t.getMonth()+1)).slice(-2) +'-'+ ('0'+t.getDate()).slice(-2) +'-'+ t.getFullYear() +' '+ t.getHours() +':'+t.getMinutes() %></center></td>
				<td style="padding:6px;">
					<center>
						<a href="#">
							<% if (item.noCont === true) { %>
							<button class="btn btn-green btn-sm wc80 paLR5" data-toggle="modal" data-target="#editorModal" onclick="<%=ctrl%>.embedEditor('<%=bi.query.rs%>', '<%=item.ngID%>', '<%=item.noCont%>');">新增</button>
							<% } else { %>
							<button class="btn btn-green btn-sm wc40 paLR5" data-toggle="modal" data-target="#editorModal" onclick="<%=ctrl%>.embedEditor('<%=bi.query.rs%>', '<%=item.ngID%>', '<%=item.noCont%>');">編輯</button>
							<button class="btn btn-danger btn-sm wc40 paLR5" onclick="<%=ctrl%>.delRs('<%=bi.query.rs%>','<%=item.ngID%>', '<%=item.title%>')">刪除</button>
							<% } %>
						</a>
					</center>
				</td>
			</tr>
			<% }); %>
		</table>
	</div>
	<% } else { %>
	<div class="widget-content">
		<table class="table table-striped table-bordered table-hover">
			<tr><th><center>尚無任何內容</center></th></tr>
		</table>
	</div>
	<% } %>
</div>
<!-- widget結束 -->

<!-- 編輯器開始 -->
<div class="modal fade modalstyle" id="editorModal" data-backdrop="static" role="dialog" aria-labelledby="editorModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="editor modal-content">

		</div>
	</div>
</div>
<!-- 編輯器結束 -->

<style type="text/css" media="screen">
	@media (max-height: 800px) {
		.modal-dialog {
			margin: 0 auto;
		}
	}
</style>
