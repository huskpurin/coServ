.content {
	margin-top: 3em;
	margin-bottom: 3em;
}
.inner {
	margin: 2.8em auto;
	padding: 2px 50px 20px;
	background: #eee;
	-webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    -o-border-radius: 15px;
    -ms-border-radius: 15px;
    border-radius: 15px;	
}
.inner h1 {			
	margin: 1em 2em;
	text-align: center;
	/*border-bottom: 1px solid #2A6496;*/
	height: 22px;	
}
.inner h1 span{
	font-size: 1em;
	color: #2A6496;
	font-weight: bolder;
	padding: 0 20px;
	background: #eee;	
}
.inner p {	
	color: #000;
	padding: 1em;
	margin: 0;
	font-size: 1.6em !important;
	line-height: 2em;
	text-indent: 2em;
}
ul li {
	list-style-type:square;
	list-style-position: outside;
	color:#2A6496;
}
.inner ul li a {
	font-size: 1.6em !important;
	line-height: 1em;
	margin-top: 0.8em;
}