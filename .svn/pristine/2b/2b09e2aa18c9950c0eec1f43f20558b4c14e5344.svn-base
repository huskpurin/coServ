.content {
	margin-top: 3em;
	margin-bottom: 3em;
}
.inner {
	margin: 3em auto;
	padding: 5px 50px 30px;
	/*background: #eee;*/
	/*background: #299DB6;*/
	/*background: #2A6496;*/
	background: #599CCE;
	color: #fff;
	-webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -o-border-radius: 10px;
    -ms-border-radius: 10px;
    border-radius: 10px;	
}
.inner h1 {			
	margin: 1em 2em;
	text-align: center;
	/*border-bottom: 1px solid #2A6496;*/
	height: 22px;	
}
.inner h1 span{
	font-size: 1em;
	/*color: #2A6496;*/
	font-weight: bolder;
	padding: 0 20px;
	/*background: #eee;*/	
}
.inner p {	
	padding: 2px 1em 1em;
	margin: 0;
	font-size: 1.6em !important;
	line-height: 2em;
	text-indent: 2em;
}
