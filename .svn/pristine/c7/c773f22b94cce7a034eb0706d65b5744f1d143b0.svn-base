.typeside {
  width: 230px;  
  margin: 0;  
  padding-left: 20px;
  padding-right: 20px;   
  background: #dfdfdf; 
  position: absolute;
  right: 0px; 
  top: 0px;
  float: right;
  z-index: 999;
}
.side-nav {    
  border-radius: 8px 0 0 8px;  
  cursor: pointer;        
  width: 80px;
  height: 80px;      
  padding-top: 20px;
  padding-left: 20px;
  background: #dfdfdf;
  font-size: 3em;
  color: #666;
  position: relative;
  top: 200px;
  right: 100px;
  z-index: 9999;
}
i {      
  display: block;
  margin-left: auto;
  margin-right: auto;
}
i:hover {
  color: #999;
}
.type {
  width: 70%;
  margin: 1em auto 2em;
  text-align: center;
  border-bottom: 4px double #999;
}
.type span {
  font-size: 2em;
  color: #4d4d4d;
  line-height:  1.5em;        
}
.callout {
  margin: 5px 20px 5px;  
  cursor: pointer;
  border-bottom: 1px solid #bcbcbc;
}
.listTitle {
  width: 160px;
  color: #2781B6;
  line-height: 1.3em;
  font-size: 1.3em;
  margin: 0;
}
.listTitle:active, 
.listTitle:hover, 
.listTitle:focus, 
.listTitle:visited, 
.listTitle.active {
  color: #6D6D6D;
}
small {
  display: block;
  color: #aaa;
  text-align: right;
  margin-bottom: 5px;
  margin-top: 5px; 
}


/*** mobile ***/
.mobile .side-nav {
  visibility: visible !important;
  right: 100px !important;
}
.mobile span {
  font-size: 3.5em !important;
  line-height: 1.5em !important;
}
.mobile .callout:last-child {
  border-bottom: none !important;
}
.mobile .listTitle {
  font-size: 2.8em !important;
  line-height: 2em !important;
  width: 460px !important;
}
.mobile small {
  font-size: 2.2em !important;
}